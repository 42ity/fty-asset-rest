<mapping>
    <target>asset/read@lib${NAME}</target>
    <url>^/api/v1/asset/?(datacenter|room|row|rack|group|device)?/?(.*)$</url>
    <method>GET</method>
    <args>
        <id>$2</id>
        <type>$1</type>
    </args>
</mapping>

<mapping>
  <target>asset/create@lib${NAME}</target>
  <url>^/api/v1/asset/?$</url>
  <method>POST</method>
</mapping>


<mapping>
  <target>asset/list@libfty_rest</target>
  <url>^/api/v1/asset/(datacenter|room|row|rack|group|device)s.*$</url>
  <args>
    <type>$1</type>
  </args>
</mapping>

<mapping>
  <target>asset/delete@libfty_rest</target>
  <url>^/api/v1/asset/(.*)$</url>
  <method>DELETE</method>
  <args>
    <id>$1</id>
  </args>
</mapping>

